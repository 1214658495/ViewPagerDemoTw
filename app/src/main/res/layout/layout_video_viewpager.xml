<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.bydauto.myviewpager.view.MyViewPager
        android:id="@+id/vp_videoViewPager"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </com.bydauto.myviewpager.view.MyViewPager>

    <!--<TextView-->
    <!--android:id="@+id/tv_vpIndex"-->
    <!--android:layout_width="wrap_content"-->
    <!--android:layout_height="wrap_content"-->
    <!--app:layout_constraintTop_toTopOf="parent"-->
    <!--app:layout_constraintStart_toStartOf="parent"-->
    <!--app:layout_constraintEnd_toEndOf="parent"/>-->

    <RelativeLayout
        android:id="@+id/rl_bar_showVideoTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@mipmap/bg_text_item"
        app:layout_constraintTop_toTopOf="parent">

        <ImageButton
            android:id="@+id/btn_back_to_videoGridview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/btn_preview_back_selector" />

        <TextView
            android:id="@+id/tv_title_video"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@id/btn_back_to_videoGridview"
            android:text="2017-09-90-09-09-10.MP4"
            android:textSize="@dimen/sp_9" />

        <TextView
            android:id="@+id/tv_vpVideoIndex"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:text="test"
            android:textColor="#000"
            android:textSize="@dimen/sp_11"
            app:layout_constraintTop_toTopOf="parent" />

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/ll_bar_editVideo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@mipmap/bg_text_item"
        android:gravity="end|center"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent">

        <ImageButton
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:background="@drawable/btn_preview_play_min_selector"/>

        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:textSize="@dimen/sp_11"
            android:layout_height="wrap_content"
            android:text="00:00" />

        <SeekBar

            android:layout_width="0dp"
            android:layout_weight="6"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:textSize="@dimen/sp_11"
            android:layout_height="wrap_content"
            android:text="02:00" />

        <ImageButton
            android:id="@+id/btn_share_VideoPreview"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:background="@drawable/btn_preview_share_selector" />

        <ImageButton
            android:id="@+id/btn_delete_VideoPreview"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:background="@drawable/btn_preview_delete_selector" />

        <ImageButton
            android:id="@+id/btn_VideoZoom"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:background="@drawable/btn_preview_zoomout_selector" />

    </LinearLayout>

</android.support.constraint.ConstraintLayout>