<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/iv_videoPhoto"
        android:layout_width="@dimen/x100"
        android:layout_height="@dimen/y60"
        android:layout_centerVertical="true"
        android:layout_marginStart="@dimen/x55"
        android:background="#ffffff"
        android:scaleType="centerCrop" />

    <ImageView
        android:id="@+id/iv_play"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/tv_title"
        android:layout_marginStart="@dimen/x97"
        android:src="@mipmap/ic_play" />


    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerInParent="true"
        android:layout_marginStart="@dimen/x28"
        android:layout_toEndOf="@+id/iv_videoPhoto"
        android:gravity="center"
        android:text="2017-09-10-12-13-24.MP4"
        android:textColor="#ffffff"
        android:textSize="@dimen/y25" />

    <TextView
        android:id="@+id/tv_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerInParent="true"
        android:layout_marginStart="@dimen/x300"
        android:layout_toEndOf="@+id/tv_title"
        android:gravity="center"
        android:text="02:00"
        android:textColor="#ffffff"
        android:textSize="@dimen/y25" />

    <com.byd.lighttextview.LightCheckBox
        android:id="@+id/cb_cbx"
        style="@style/CheckboxStyle"
        android:layout_marginStart="@dimen/x660"
        android:layout_toEndOf="@+id/iv_videoPhoto"
        android:clickable="false"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:button="@drawable/btn_edit_selected_item_selector"
        android:visibility="visible" />

</RelativeLayout>